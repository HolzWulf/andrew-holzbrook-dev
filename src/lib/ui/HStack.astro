---
/**
 * HStack.astro
 * Props:
 *  - spacing: Tailwind spacing value (default: '4')
 *  - class: Override/additional Tailwind classes
 *  - as: HTML tag to render (default: 'div')
 */
const {
  as: Tag = "div",
  spacing = "4",
  class: className = "",
  ...rest
} = Astro.props;
---

<Tag class={`flex flex-row gap-${spacing} ${className}`} {...rest}>
  <slot />
</Tag>
