---
/**
 * Stack.astro
 * Props:
 *  - direction: 'row' | 'column' (default: 'column')
 *  - spacing: Tailwind spacing value (default: '4')
 *  - class: Override/additional Tailwind classes
 *  - as: HTML tag to render (default: 'div')
 */
const {
  as: Tag = "div",
  direction = "column",
  spacing = "4",
  class: className = "",
  ...rest
} = Astro.props;

const directionClass = direction === "row" ? "flex-row" : "flex-col";
const spacingClass = `gap-${spacing}`;
---

<Tag class={`flex ${directionClass} ${spacingClass} ${className}`} {...rest}>
  <slot />
</Tag>
